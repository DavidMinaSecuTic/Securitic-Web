@page
@model SecuriticCargaEstres.Pages.FormularioModel
@{
    ViewData["Title"] = "Formulario";
}

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputNombre">Nombre Completo *</label>
            <input type="text" class="form-control" id="inputNombre" placeholder="Juan Zapata Rodriguez">
        </div>
    
        <div class="form-group col-md-6">
            <label for="inputState">Numero de pruebas al año *</label>
            <select id="inputState" class="form-control">
                <option selected>Elige...</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
            </select>
        </div>
    </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Email *</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
            <div class="form-group col-md-4">
                <label for="inputCompañia">Compañia *</label>
                <input type="text" class="form-control" id="inputCompañia" placeholder="Securitic">
            </div>
            <div class="form-group col-md-4">
                <label for="inputTelefono">Numero de telefono *</label>
                <input type="text" class="form-control" id="inputTelefono" placeholder="123551226736">
            </div>
        </div>

        <div class="form-group">
            <label for="inputAddress2">Mensaje *</label>
            <input type="text" class="form-control" id="inputMensaje" placeholder="Escribenos algo...">
        </div>
        
            <button type="submit" class="btn btn-primary">Realizar prueba</button>
     
</form>