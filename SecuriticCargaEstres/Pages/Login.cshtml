@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Ingresar</h5>
                        <form class="form-signin">
                            <div class="form-label-group">
                                <input type="email" id="inputCorreo" class="form-control" placeholder="Correo Electronico" required autofocus>
                                <label for="inputCorreo">Correo Electronico</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputContraseña" class="form-control" placeholder="Contraseña" required>
                                <label for="inputContraseña">Contraseña</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Recuerdame</label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Ingresar</button>
                            <hr class="my-4">
                            <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Ingresar con Google</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
